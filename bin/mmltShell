# File: bin/mmltShell

# Trap SIGINT (Ctrl+C) to prevent the script from being killed
trap ctrl_c INT

function ctrl_c() {
  clear
  echo -e "\n\033[1;31mDetected Ctrl+C. Use the menu option to exit the script properly.\n Press any key to continue ...\033[0m"
}

LOCKFILE="/tmp/loadtest.lock"

if [ -f "$LOCKFILE" ]; then
  clear
  echo -e "\033[1;33mScript is already running. Type $(exit) from the shell to return to the menu.\n\nReturning to the bash shell ...\n\033[0m"
  exit 1 # Exit the current process, returning to the main script loop
fi

# Create lock file
touch "$LOCKFILE"

function cleanup {
  rm -f "$LOCKFILE"
}

trap cleanup EXIT

function mmltCreate {
  echo -e "\033[1;33mRunning ltctl deployment create ...\033[0m"
  go run ./cmd/ltctl deployment create
  wait_after_action
}

function mmltInfo {
  echo -e "\033[1;33mRunning ltctl deployment info ...\033[0m"
  go run ./cmd/ltctl deployment info
  wait_after_action
}

function mmltSync {
  echo -e "\033[1;33mRunning ltctl deployment sync ...\033[0m"
  go run ./cmd/ltctl deployment sync
  wait_after_action
}

function mmltDestroy {
  echo -e "\033[1;33mRunning ltctl deployment destroy ...\033[0m"
  go run ./cmd/ltctl deployment destroy
  wait_after_action
}

function mmltStart {
  echo -e "\033[1;33mRunning ltctl loadtest start ...\033[0m"
  go run ./cmd/ltctl loadtest start
  wait_after_action
}

function mmltStatus {
  echo -e "\033[1;33mRunning ltctl loadtest status ...\033[0m"
  go run ./cmd/ltctl loadtest status
  wait_after_action
}

function mmltStop {
  echo -e "\033[1;33mRunning ltctl loadtest stop ...\033[0m"
  go run ./cmd/ltctl loadtest stop
  wait_after_action
}

function mmltSsh {
  echo -e "\033[1;33mRunning ltctl ssh $@ ...\033[0m"
  go run ./cmd/ltctl ssh "$@"
}

function mmltReset {
  echo -e "\033[1;33mRunning ltctl loadtest reset ...\033[0m"
  go run ./cmd/ltctl loadtest reset
  wait_after_action
}

function wait_for_user_attach {
  echo -e "\033[1;34mPress any key to begin...\033[0m"
  while ! read -n 1 -s -r; do
    sleep 1
  done
}

function wait_after_action {
  echo -e "\033[1;34mPress any key to continue ...\033[0m"
  while ! read -n 1 -s -r; do
    sleep 1
  done
}

function show_welcome {
  clear
  echo -e "\033[1;34mWelcome to the Mattermost Load Test Shell\n\033[0m"
  if [ "$MMLT_CONFIG_FILES_CREATED" == "true" ]; then
    echo -e "\033[1;33m\nIt looks like this is your first time running the script.\033[0m"
    echo -e "\033[1;33mWe recommend running the \033[1;32mconfigureLoadTest\033[1;33m tool in the Configuration File Operations menu to set up your configuration files.\n\033[0m"
  elif [ "$MMLT_CONFIG_FILES_CREATED" != "true" ]; then
    echo -e "\033[1;32m\nUsing exising configuration files!\033[0m"
  fi
}

function warn_credentials {
  if [ "$MMLT_AWS_CREDENTIALS" != "true" ]; then
    echo -e "\033[1;91m\nCredentials file missing or incorrect! "Edit Configuration Files" to set up AWS Credentials!\n\033[0m"
  elif [ "$MMLT_AWS_CREDENTIALS" == "true" ]; then
    echo -e "\033[1;32m\nUsing AWS Credentials file!\n\033[0m"
  fi
}

function warn_license {
  if [ "$MMLT_LICENSE" != "true" ]; then
    echo -e "\033[1;91m\nLicense file missing! Add your license to the /mmlt/config folder.\n\033[0m"
  elif [ "$MMLT_LICENSE" == "true" ]; then
    echo -e "\033[1;32m\nUsing existing license file!\n\033[0m"
  fi
}

function show_menu {
  echo -e "\033[1;36mPlease choose an option:\033[0m"
  echo -e "\033[1;32m1) Load Test Operations\033[0m"
  echo -e "\033[1;0m2) SSH Operations"
  echo -e "\033[1;0m3) Edit Configuration Files"
  echo -e "\033[1;93m4) Drop to bash shell\033[0m"
  echo -e "\033[1;31m5) Exit script and stop container\033[0m"
  read -p "Select an option [1-5]: " option
}

function show_loadtest_menu {
  echo -e "\033[1;36mLoad Test Operations:\033[0m"
  echo -e "\033[1;32m1) Create a new deployment\033[0m"
  echo -e "\033[1;32m2) Start a load test\033[0m"
  echo -e "\033[1;34m3) Get load test status\033[0m"
  echo -e "\033[1;31m4) Stop the load test\033[0m"
  echo -e "\033[1;0m5) Get deployment info"
  echo -e "\033[1;0m6) Sync deployment"
  echo -e "\033[1;0m7) Reset load test"
  echo -e "\033[1;31m8) Destroy the deployment\033[0m"
  echo -e "\033[1;35m9) Back to main menu\033[0m"
  read -p "Select an option [1-9]: " loadtest_option
}

function ssh_menu {
  echo -e "\033[1;36mSSH Operations:\033[0m"
  echo -e "\033[1;0m1) List available instances"
  echo -e "\033[1;0m2) Coordinator"
  echo -e "\033[1;0m3) Proxy"
  echo -e "\033[1;0m4) Metrics/Prometheus/Grafana"
  echo -e "\033[1;35m5) Back to main menu\033[0m"
  read -p "Select an option [1-5]: " ssh_option
}

function config_menu {
  echo -e "\033[1;36mConfiguration File Operations:\033[0m"
  echo -e "\033[1;92m1) Configure Load Test Settings\033[0m"
  echo -e "\033[1;0m2) Edit deployer.json"
  echo -e "\033[1;0m3) Edit coordinator.json"
  echo -e "\033[1;0m4) Edit config.json"
  echo -e "\033[1;0m5) Edit AWS Credentials\033[0m"
  echo -e "\033[1;35m6) Back to main menu\033[0m"
  read -p "Select an option [1-6]: " config_option
}

# Wait for the user to attach
wait_for_user_attach

show_welcome

warn_credentials

while true; do
  show_menu
  case $option in
  1)
    while true; do
      show_loadtest_menu
      case $loadtest_option in
      1) mmltCreate ;;
      2) mmltStart ;;
      3) mmltStatus ;;
      4) mmltStop ;;
      5) mmltInfo ;;
      6) mmltSync ;;
      7) mmltReset ;;
      8) mmltDestroy ;;
      9) break ;;
      *)
        clear
        echo -e "\033[1;31mInvalid option. Please select again.\n\033[0m"
        ;;
      esac
    done
    ;;
  2)
    while true; do
      ssh_menu
      case $ssh_option in
      1) mmltSsh ;;
      2) mmltSsh coordinator ;;
      3) mmltSsh proxy ;;
      4) mmltSsh metrics ;;
      5) break ;;
      *)
        clear
        echo -e "\033[1;31mInvalid option. Please select again.\n\033[0m"
        ;;
      esac
    done
    ;;
  3)
    while true; do
      config_menu
      case $config_option in
      1) mmltConfigure ;;
      2) nano /mmlt/config/deployer.json ;;
      3) nano /mmlt/config/coordinator.json ;;
      4) nano /mmlt/config/config.json ;;
      5) nano /mmlt/config/credentials ;;
      6) break ;;
      *)
        clear
        echo -e "\033[1;31mInvalid option. Please select again.\n\033[0m"
        ;;
      esac
    done
    ;;
  5)
    clear
    echo -e "\033[1;33mDropping to bash shell. Type 'exit' to return to the menu.\n\033[0m"
    bash
    ;;
  6)
    echo -e "\033[1;31mExiting script and stopping container...\033[0m"
    exit 0
    ;;
  *)
    clear
    echo -e "\033[1;31mInvalid option. Please select again.\n\033[0m"
    ;;
  esac
done

cleanup
