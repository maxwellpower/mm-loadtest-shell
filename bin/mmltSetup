# File: bin/mmltSetup

function _sshAgent {
    echo "Adding SSH key to the agent..."
    if [ -z "$(pgrep ssh-agent)" ]; then
        echo "Starting ssh-agent..."
        eval $(ssh-agent -s)
    else
        echo "ssh-agent is already running..."
    fi
    echo "Adding the key..."
    ssh-add /root/.ssh/id_rsa
}

function _checkConfig {
    echo "Checking the configuration..."
    if [ ! -f /mmlt/config/deployer.sample.json ]; then
        export MMLT_CONFIG_FILES_CREATED=true
        echo "Deployer configuration file not found. Copying..."
        cp /mmlt/config.default/deployer.sample.json /mmlt/config/deployer.json
        echo "Configuring Load Test Version in deployer ..."
        NEW_VERSION=$(curl -s https://api.github.com/repos/mattermost/mattermost-load-test-ng/releases/latest | jq -r .tag_name | sed 's/^v//') && sed -i'' -e "s|/v[0-9]*\.[0-9]*\.[0-9]*/|/v${NEW_VERSION}/|g" /mmlt/config/deployer.json
    fi
    if [ ! -f /mmlt/config/config.sample.json ]; then
        echo "Config configuration file not found. Copying..."
        cp /mmlt/config.default/config.sample.json /mmlt/config/config.json
    fi
    if [ ! -f /mmlt/config/coordinator.sample.json ]; then
        echo "Coordinator configuration file not found. Copying..."
        cp /mmlt/config.default/coordinator.sample.json /mmlt/config/coordinator.json
    fi
}

function _setTerraformCredentials {
    echo "Handle Terraform Credentials"
    export AWS_SHARED_CREDENTIALS_FILE=/mmlt/config/credentials
    export AWS_PROFILE=mm-loadtest
    # Check if the credentials file exists
    if [ -f /mmlt/config/credentials ]; then
        echo "Credentials file found. Using the credentials file."
        export MMLT_AWS_CREDENTIALS=true
    else
        echo "No credentials found. Please provide a credentials file."
        export MMLT_AWS_CREDENTIALS=false
        cat <<EOL >/mmlt/config/credentials
[mm-loadtest]
aws_access_key_id=
aws_secret_access_key=
# If Required
#aws_session_token=
EOL
        echo "AWS credentials file created. Please update it with your actual credentials."
    fi
}

echo "Setting up MMLT Shell..."
_sshAgent
_checkConfig
_setTerraformCredentials
echo "MMLT Shell READY..."

# Pass control to the CMD
exec "$@"
